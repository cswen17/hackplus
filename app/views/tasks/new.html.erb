
<%= render "/demo2/header" %>

<% provide(:title, 'New Task') %>
<style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width:500px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

    </style>

    <div id = "wrap">
	<div class="container">

	<div class="main-container">
		
		<div class="row">

			<div class="span4 offset4">
				<%= form_for @task, html: {class: "form-signin"} do |f| %>
					 <h2 class="form-signin-heading">Register</h2>

					<% if @task.errors.include?(:name) %>
					<div class="form-group has-error">
						<%= f.text_field :name, class:"form-control", html: { id: "inputError"},  placeholder:"Name" %>
					</div>
					<% else %>
					<div class = "form-group">
					 	<%= f.label :name, class: "sr-only" %>

						<%= f.text_field :name, class:"input-block-level", placeholder:"Name" %>
					</div>
					<% end %>

					<% if @task.errors.include?(:description) %>
					<div class="form-group has-error">
						<%= f.text_area :description, class:"form-control", size:"10x5", html: { id: "inputError"},  placeholder:"Description" %>
					</div>
					<% else %>
					<div class = "form-group">
					 	<%= f.label :description, class: "sr-only" %>
						<%= f.text_area :description, class:"form-control", size:"10x5",  placeholder:"Description" %>

					</div>
					<% end %>
					<div class = "form-group">
					 	<%= f.label :duetime, class: "sr-only" %>
						<%= f.number_field :duetime, class: "input", placeholder: "Hours till due"%>

					</div>
					<div class = "form-group">
					 	<%= f.label :completed, class: "sr-only" %>
						<%= f.hidden_field :completed, value: false %>

					</div>
					<div class = "form-group">
					 	<%= f.label :completed, class: "sr-only" %>
						<%= f.hidden_field :user, value:current_user %>

					</div>


					

					<%= f.submit "Create Task", class: "btn btn-large btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
	</div>
	</div>
