
<%= render "/demo2/header" %>

<% provide(:title, 'Sign Up') %>


    <div id = "wrap">
	<div class="container">

	<div class="main-container">
		
		<div class="row">

			<div class="span4 offset4">
				<%= form_for @user, html: {class: "form-signin"} do |f| %>
					 <h2 class="form-signin-heading">Register</h2>
					 <%= render 'shared/error_messages', object: f.object %>

					<% if @user.errors.include?(:name) %>
					<div class="form-group has-error">
						<%= f.text_field :name, class:"form-control", html: { id: "inputError"},  placeholder:"Name" %>
					</div>
					<% else %>
					<div class = "form-group">
					 	<%= f.label :name, class: "sr-only" %>

						<%= f.text_field :name, class:"input-block-level", placeholder:"Name" %>
					</div>
					<% end %>

					<% if @user.errors.include?(:email) %>
					<div class="form-group has-error">
						<%= f.text_field :email, class:"form-control", html: { id: "inputError"},  placeholder:"Email" %>
					</div>
					<% else %>
					<div class = "form-group">
						<%= f.label :email, class: "sr-only" %>
						<%= f.text_field :email, class:"input-block-level", placeholder:"Email" %>
					</div>
					<% end %>

					<%= f.label :password, class: "sr-only" %>
					<% if @user.errors.include?(:password) %>

					<div class="form-group has-error">
						<%= f.password_field :password, class:"form-control", html: { id: "inputError"},  placeholder:"Password" %>
					</div>
					<% else %>
					<div class = "form-group">
						<%= f.password_field :password, class:"input-block-level", placeholder:"Password" %>
					</div>
					<% end %>

					<%= f.label :password_confirmation, "Confirmation",class: "sr-only" %>

					<% if @user.errors.include?(:password_confirmation) %>
					<div class="form-group has-error">
						<%= f.password_field :password_confirmation, class:"form-control", html: { id: "inputError"},  placeholder:"Confirm" %>
					</div>
					<% else %>
					<div class = "form-group">
						<%= f.password_field :password_confirmation, class:"input-block-level", placeholder:"Confirm" %>
					</div>
					<% end %>
					<%= f.submit "Create account", class: "btn btn-large btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
	</div>
	</div>
