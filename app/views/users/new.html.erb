
<%= render "/demo2/header" %>

<% provide(:title, 'Sign Up') %>
<style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width:500px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

    </style>

    <div id = "wrap">
	<div class="container">

	<div class="main-container">
		
		<div class="row">

			<div class="span4 offset4">
				<%= form_for @user, html: {class: "form-signin"} do |f| %>
					 <h2 class="form-signin-heading">Register</h2>
					 <%= render 'shared/error_messages' %>

					<% if @user.errors.include?(:name) %>
					<div class="form-group has-error">
						<%= f.text_field :name, class:"form-control", html: { id: "inputError"},  placeholder:"Name" %>
					</div>
					<% else %>
					<div class = "form-group">
					 	<%= f.label :name, class: "sr-only" %>

						<%= f.text_field :name, class:"input-block-level", placeholder:"Name" %>
					</div>
					<% end %>

					<% if @user.errors.include?(:email) %>
					<div class="form-group has-error">
						<%= f.text_field :email, class:"form-control", html: { id: "inputError"},  placeholder:"Email" %>
					</div>
					<% else %>
					<div class = "form-group">
						<%= f.label :email, class: "sr-only" %>
						<%= f.text_field :email, class:"input-block-level", placeholder:"Email" %>
					</div>
					<% end %>

					<%= f.label :password, class: "sr-only" %>
					<% if @user.errors.include?(:password) %>

					<div class="form-group has-error">
						<%= f.password_field :password, class:"form-control", html: { id: "inputError"},  placeholder:"Password" %>
					</div>
					<% else %>
					<div class = "form-group">
						<%= f.password_field :password, class:"input-block-level", placeholder:"Password" %>
					</div>
					<% end %>

					<%= f.label :password_confirmation, "Confirmation",class: "sr-only" %>

					<% if @user.errors.include?(:password_confirmation) %>
					<div class="form-group has-error">
						<%= f.password_field :password_confirmation, class:"form-control", html: { id: "inputError"},  placeholder:"Confirm" %>
					</div>
					<% else %>
					<div class = "form-group">
						<%= f.password_field :password_confirmation, class:"input-block-level", placeholder:"Confirm" %>
					</div>
					<% end %>
					<%= f.submit "Create account", class: "btn btn-large btn-primary" %>
				<% end %>
			</div>
		</div>
	</div>
	</div>
	</div>
