<html> 
<head>
<%= stylesheet_link_tag "bootstrap" %>
<%= stylesheet_link_tag "custom" %>
<title> Hackplus </title>
<style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }

    </style>
</head>

<body>
          <%= render "demo2/header" %>

    <div id="wrap">


      <!-- Begin page content -->
      <div class="container">
        <div class="row">
          <div class="span4 offset4">
            <%= form_for(:session, url: sessions_path) do |f| %>
              <h2 class="form-signin-heading">Sign in</h2>

              <div class = "form-group">
                <%= f.label :email, class: "sr-only" %>

                <%= f.text_field :email, class:"input-block-level", placeholder:"Email", id: 'main_email'%>
              </div>

              <div class = "form-group">
                <%= f.label :password, class: "sr-only" %>
                <%= f.password_field :password, class:"input-block-level", placeholder:"Password", id: 'main_password' %>
              </div>

              <%= f.submit "Sign in", class: "btn btn-large btn-primary", id: "main_signin" %>
              <%= link_to "New user? Sign up!", signup_path %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

</body>
</html>