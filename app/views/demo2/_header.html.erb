<% if (not signed_in?) and (request.original_url.split('/')[3]  == "/newtask")%> <!-- checks if user is logged in -->
  <script type="text/javascript">
    window.location.href="/signin"; // put your correct path in a string here
  </script>
<% end %>
<html>
<head>

<%= stylesheet_link_tag "bootstrap" %>
<%= stylesheet_link_tag "custom" %>
<link href='http://fonts.googleapis.com/css?family=Kite+One|Dosis|Open+Sans' rel='stylesheet' type='text/css'>

<title> Hackplus </title>
</head>

<!-- Fixed navbar -->
      
      <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
          <div class = "row-fluid">
          <span class = "span4">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">Task+</a>
            </div>
            </span>
            <span class = "span2 offset6">
                <div class="collapse navbar-collapse">
                  <ul class="nav navbar-nav" style = "margin-top: 5px;">
                    <% if signed_in? %>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %></a>
                        <ul class="dropdown-menu">
                        
                          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                          <li><a href="newtask">New Task</a></li>

                          <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
      
                        </ul>
                      </li>
                    <% else %>
                      <li class = "dropdown">
                      <a href ='#' class = "dropdown-toggle" data-toggle="dropdown"> Sign In </a>
                      <ul class = "dropdown-menu wide">
                      <li>
     
                          <%= form_for(:session, url: sessions_path, html: { class: "form-dropdown"}) do |f|%>

                              <%= f.label :email, class: "sr-only" %>

                              <%= f.text_field :email, class:"input-block-level", placeholder:"Email" %>

                              <%= f.label :password, class: "sr-only" %>
                              <%= f.password_field :password, class:"input-block-level", placeholder:"Password" %>

                            <%= f.submit "Sign in", class: "btn btn-primary" %>
                            <input type = "button" class= "btn btn-secondary" style = "float: right" onclick= "window.location='/signup'" value = "Sign Up"/>

                           <% end %>





                     
                      </li>
                      <li>

                      </li>
                      </ul>
                                            </li>

                    <% end %>
                  </ul>
                </div><!--/.nav-collapse -->
            </span>
          </div>
        </div>
      </div>
